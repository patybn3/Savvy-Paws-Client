<!-- add new pet modal -->
    <form class="add-new form-group">
    <fieldset>
      <legend>Add a New Pet!</legend>
      <p id="add-message"></p>
      <label>Pet's Picture</label>
      <img style="max-height: 200px;"class="preview-img my-2 mx-auto d-block">
   <div class="form-group form-inline">
     <label for="newURL" class="sr-only">URL</label>
     <input type="URL" class="form-control my-1 mr-2 photo-url" id="newURL" placeholder="Image URL" style="width: 80%" name="pet[site]" required autofocus autocomplete="off" >

     <button type="button" class="btn btn-primary preview button">Preview</button>
   </div>
      <label>Pet's Name</label>
      <input type="text" class="form-control" name="pet[name]"
      placeholder="Name Here">
      <br>
      <label>Species</label>
      <select class="custom-select my-1 mr-sm-2 inlineFormCustomSelectPref" name=pet[species]>
      <option selected>Select Species</option>
      <option value="Dog" class="dog" id="pet-dog">Dog</option>
      <option value="Cat" class="cat" id="pet-cat">Cat</option>
      <option value="Reptile" class="Reptile">Reptile</option>
      <option value="Fish" class="Fish">Fish</option>
      <option value="Rodentia" class="Rodentia">Rodentia</option>
      <!-- <option value="3">Three</option> -->
      </select>
      <br>
      <label>Breed</label>
      <input type="text" class="form-control" name="pet[breed]"
      placeholder="Pitbull">
      <br>
      <label>Date of Birth</label>
      <input type="date" class="form-control" name="pet[dob]"
      placeholder="02/12/2020">
      <br>
      <input type='submit' class="btn btn-primary btn-lg btn-block button" value="Submit">
      <br>
      <button type="button" class="btn btn-primary btn-lg btn-block go-back">
      Go Back</button>
    </fieldset>
</form>
